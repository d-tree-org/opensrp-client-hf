<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/tb_back_to_villages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:theme="@style/AddoTheme.NoActionBar"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/addo_fp_scan_toobar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetLeft="10dp"
            app:contentInsetStart="10dp"
            app:popupTheme="@style/AddoTheme.NoActionBar">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_back_to_villages"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/transparent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_back"
                    android:tint="@color/colorPrimary" />


                <TextView
                    android:id="@+id/return_to_village_txt"
                    style="@style/returnToSelectVil"
                    android:layout_width="159dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="19dp"
                    android:text="Return to select village" />


            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        style="@style/scanFingerprint"
        android:layout_width="326dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="473dp"
        android:width="187dp"
        android:height="30dp"
        android:text="Scan fingerprint" />


    <LinearLayout
        android:id="@+id/village_name_section"
        android:layout_width="255dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="187dp"
        android:layout_marginRight="42dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="3dp"
            android:src="@mipmap/ic_home"
            android:tint="#b39eb5" />

        <TextView
            android:id="@+id/selected_village"
            style="@style/arafaMwendapole"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:width="255dp"
            android:height="21dp"
            android:text="Arafa Mwendapole" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="162dp"
        android:layout_marginTop="265dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="95dp"
            android:src="@drawable/ic_fingerprint" />

    </LinearLayout>

<!--    <LinearLayout
        android:id="@+id/scan_text_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="212dp"
        android:background="@drawable/scanfingerprint_rectangle_bg"
        android:orientation="horizontal" />-->

    <TextView
        android:id="@+id/scan_fp_txt"
        style="@style/scanFingerprintBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="483dp"
        android:layout_marginEnd="29dp"
        android:width="163dp"
        android:height="20dp"
        android:background="@drawable/scanfingerprint_rectangle_bg"
        android:gravity="center"
        android:text="SCAN FINGERPRINT" />

</RelativeLayout>