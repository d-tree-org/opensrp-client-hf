<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="Switch Environment"
        app:iconSpaceReserved="false">
        <Preference
            android:key="preference"
            android:title="Switch the App Environment"
            android:summary="Click here 7 times to get it"
            app:iconSpaceReserved="false"/>
        <SwitchPreferenceCompat
            android:key="enable_production"
            android:summaryOff="Test"
            android:summaryOn="Production"
            android:title="Current Environment"
            app:isPreferenceVisible="false"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>
</PreferenceScreen>